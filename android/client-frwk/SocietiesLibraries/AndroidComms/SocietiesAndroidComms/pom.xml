<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.societies.android.platform.comms</groupId>
    <artifactId>AndroidCommunications</artifactId>
	<version>${release.version}</version>
    <packaging>apklib</packaging>

    <parent>
	    <groupId>org.societies</groupId>
	    <artifactId>android-parent</artifactId>
	    <version>RELEASE</version>
    </parent>

    <dependencies>
		<dependency>
			<groupId>org.societies.android.api.external</groupId>
			<artifactId>societies-android-api</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
		    <groupId>org.societies.comm.xmpp</groupId>
		    <artifactId>CommunicationFrameworkCommons</artifactId>
		    <type>apklib</type>
		    <version>${version.comm}</version>
		</dependency>
		<dependency>
			<groupId>org.societies.utilities</groupId>
			<artifactId>DBC</artifactId>
			<version>${release.version}</version>
		</dependency>
		<dependency>
		    	<groupId>com.google.android</groupId>
	           	<artifactId>android</artifactId> 
	           	<exclusions>
	           		<exclusion>
						<artifactId>xpp3</artifactId>
						<groupId>xpp3</groupId>
					</exclusion>
				</exclusions>
		</dependency>
		<dependency>
			<groupId>org.asmack</groupId>
		    <artifactId>asmack</artifactId>
		</dependency>
		<dependency>
			<groupId>org.simpleframework</groupId>
			<artifactId>simple-xml</artifactId>
			<exclusions>
				<!-- StAX is not available on Android -->
				<exclusion>
					<artifactId>stax</artifactId>
				        <groupId>stax</groupId>
				</exclusion>
				<exclusion>
				        <artifactId>stax-api</artifactId>
				        <groupId>stax</groupId>
				 </exclusion>
				    <!-- Provided by Android -->
				 <exclusion>
				        <artifactId>xpp3</artifactId>
				        <groupId>xpp3</groupId>
				 </exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<artifactId>xpp3</artifactId>
			<groupId>xpp3</groupId>
			<scope>provided</scope>
		</dependency>
		
	</dependencies>
	    
	
    <build>
        <finalName>${project.artifactId}</finalName>
        <sourceDirectory>src</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>android-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

	<reporting>
	    <plugins>
	      <plugin>
	        <groupId>org.codehaus.mojo</groupId>
	        <artifactId>findbugs-maven-plugin</artifactId>
	      </plugin>
	    </plugins>
	</reporting>
    
</project>


