<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>

   <parent>
        <groupId>org.societies</groupId>
        <artifactId>android-parent</artifactId>
        <version>RELEASE</version>
   </parent>

   <groupId>org.societies.android.remote.helper.test</groupId>
   <artifactId>TestSocietiesAndroidRemoteHelpers</artifactId>
   <name>TestAndroidRemoteHelpers</name>
   <version>${release.version}</version>
   <packaging>apk</packaging>
   
   <properties>
        <tested.project.dir>${project.basedir}/../ContainerCoreServicesHelpers</tested.project.dir>
        <tested.project.android.coverage>/data/data/org.societies.android.remote.helper.container/files/coverage.ec</tested.project.android.coverage>
   </properties>

   <developers>
      <developer>
		 <name>WP4 Client Framework Team</name>
		<!-- Name of component author-->
		 <email>http://www.ict-societies.eu</email>
		<!-- Component author e-mail-->
	  </developer>
   </developers>


    <dependencies>
		<dependency>
	    	<groupId>com.google.android</groupId>
	        <artifactId>android</artifactId> 
		</dependency>
        <dependency>
            <groupId>com.google.android</groupId>
            <artifactId>android-test</artifactId>
		</dependency>
		<dependency>
			   <groupId>org.societies.android.remote.helper.container</groupId>
			   <artifactId>ContainerSocietiesAndroidRemoteHelpers</artifactId>
			   <version>${release.version}</version>
				<scope>provided</scope>
				<type>jar</type>
		</dependency>
        <dependency>
			   <groupId>org.societies.android.remote.helper.container</groupId>
			   <artifactId>ContainerSocietiesAndroidRemoteHelpers</artifactId>
                <version>${release.version}</version>
                <type>apk</type>
        </dependency>
		<dependency>
		   <groupId>org.societies.android.remote.helper</groupId>
		   <artifactId>SocietiesAndroidRemoteHelpers</artifactId>
			<version>${release.version}</version>
			<scope>provided</scope>
			<type>apklib</type>
		</dependency>   
		
        <dependency>
            <groupId>emma</groupId>
            <artifactId>emma</artifactId>
            <scope>compile</scope>
        </dependency>
		
    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>
        <sourceDirectory>src</sourceDirectory>
                <plugins>
                    <plugin>
                        <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                        <artifactId>android-maven-plugin</artifactId>
                        <configuration>
	                        <testCoverage>true</testCoverage>
	                    	<testCreateReport>true</testCreateReport>
	                 		<testTestSize>medium</testTestSize>
	                 		<testCoverageFile>${tested.project.android.coverage}</testCoverageFile>
                            <!--test>
                                <coverage>true</coverage>
                                <createReport>true</createReport>
	                        	<testSize>medium</testSize>
                            </test-->
                        </configuration>
                        <extensions>true</extensions>
                        <!-- -->
                        <executions>
                            <execution>
                                <id>pull-coverage</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>pull</goal>
                                </goals>
                                <configuration>
                                    <pullSource>${tested.project.android.coverage}</pullSource>
                                    <pullDestination>${tested.project.dir}/target/emma/coverage.ec</pullDestination>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <reporting>
                <plugins>
                    <!--plugin>
                        <groupId>org.sonatype.maven.plugin</groupId>
                        <artifactId>emma4it-maven-plugin</artifactId>
                        <version>1.3</version>
                        <configuration>
                            <metadatas>${tested.project.dir}/target/emma/coverage.em,${tested.project.dir}/src/
                            </metadatas>
                            <instrumentations>${tested.project.dir}/target/emma/coverage.ec</instrumentations>
                            <reportDirectory>${tested.project.dir}/target/emma/</reportDirectory>
                            <baseDirectory>{tested.project.dir}/target/</baseDirectory>
                            <formats>xml,html</formats>
                        </configuration>
                    </plugin-->

					<plugin>
		        		<groupId>org.apache.maven.plugins</groupId>
		        		<artifactId>maven-surefire-report-plugin</artifactId>
		        		<version>2.12.4</version>
		      		</plugin>
                </plugins>
    	</reporting>
</project>
