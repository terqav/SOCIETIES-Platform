<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
        	<groupId>org.societies</groupId>
        	<artifactId>android-parent</artifactId>
        	<version>RELEASE</version>
	</parent>

	<groupId>org.societies.android.platform</groupId>
	<artifactId>SocietiesAndroidSocialData</artifactId>
	<name>Societies Android Social Data</name>
	<version>${release.version}</version>
	<packaging>apklib</packaging>
	
    <dependencies>
	<!-- Android target version 2 assumes that Android JAR is retrieved from remote repository -->
		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId> 
			<exclusions>
				<!-- Provided by Android -->
				<exclusion>
					<artifactId>xpp3</artifactId>
					<groupId>xpp3</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.societies.platform.socialdata</groupId>
			<artifactId>SocialDataComms</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<groupId>org.societies.android.platform.sns</groupId>
			<artifactId>doConnectAPP</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<groupId>org.societies.android.api.internal</groupId>
			<artifactId>societies-android-api-internal</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<groupId>org.societies.android.platform.comms.helper</groupId>
			<artifactId>societies-android-comms-helper</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<artifactId>xpp3</artifactId>
			<groupId>xpp3</groupId>
			<version>1.1.4c</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.simpleframework</groupId>
			<artifactId>simple-xml</artifactId>
			<exclusions>
				<!-- StAX is not available on Android -->
				<exclusion>
					<artifactId>stax</artifactId>
					<groupId>stax</groupId>
				</exclusion>
				<exclusion>
					<artifactId>stax-api</artifactId>
					<groupId>stax</groupId>
				</exclusion>
				<!-- Provided by Android -->
				<exclusion>
					<artifactId>xpp3</artifactId>
					<groupId>xpp3</groupId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>

	<build>
		<finalName>${project.artifactId}</finalName>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>com.jayway.maven.plugins.android.generation2</groupId>
				<artifactId>android-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>
